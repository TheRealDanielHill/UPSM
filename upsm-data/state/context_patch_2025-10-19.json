  "derived_add": {
    "RME_v1_0": {
      "id": "RME_v1_0",
      "name": "Regime Map Engine",
      "description": "Classify macro state by real-rate sign Ã— inflation bin; used for biasing and scenario framing.",
      "inputs": ["cpi_yoy", "ust10y_yield", "tips10y_yield_optional"],
      "derived": {
        "real_rate": "if tips10y_yield_optional != null then tips10y_yield_optional else ust10y_yield - cpi_yoy",
        "real_rate_sign": "real_rate >= 0 ? 'positive' : 'negative'",
        "inflation_bin": "cpi_yoy >= 4 ? 'high' : 'low'",
        "regime_quadrant": "concat(real_rate_sign == 'positive' ? '+' : '-', '_', inflation_bin)"
      },
      "quadrants": {
        "A": "+_low",
        "B": "+_high",
        "C": "-_low",
        "D": "-_high"
      },
      "switch_rule": "Regime changes only when quadrant persists >= 3 consecutive monthly prints.",
      "affects": {
        "msi": false,
        "ttl": false,
        "bias_templates": true
      }
    }
  },
  "modules_add": {
    "MPP_v1_0": {
      "id": "MPP_v1_0",
      "name": "Macro Pulse Panel",
      "purpose": "Track real-economy momentum (growth, trade, labor, sentiment) to complement MSI.",
      "domain": ["Growth", "Labor", "Trade", "Sentiment"],
      "tiles": [
        {"id":"mpp_ism_noi","metric":"ISM Manufacturing New Orders","source":"FRED:NAPMNOI","cadence":"monthly","bands":{">=52":"green","48-52":"yellow","<48":"red"}},
        {"id":"mpp_lead_lei","metric":"Conference Board LEI (Î”)","source":"FRED/ConferenceBoard","cadence":"monthly","bands":{">0":"green","=0":"yellow","<0":"red"}},
        {"id":"mpp_freight","metric":"Cass Freight Shipments YoY","source":"Cass Info Systems","cadence":"monthly","bands":{">=5":"green","-5..5":"yellow","<=-5":"red"}},
        {"id":"mpp_nfibhire","metric":"NFIB Hiring Plans","source":"NFIB","cadence":"monthly","bands":{">20":"green","10-20":"yellow","<10":"red"}},
        {"id":"mpp_trade","metric":"Global Container Throughput Index (Î”)","source":"RWI/TradingEconomics","cadence":"monthly","bands":{">0":"green","-2..0":"yellow","<-2":"red"}},
        {"id":"mpp_fundflow","metric":"Global Fund Flows (Equity+Bond, 4w %AUM)","source":"ETF.com/ICI/EPFR summaries","cadence":"weekly","bands":{">=0.3":"green","-0.3..0.3":"yellow","<=-0.3":"red"}},
        {"id":"mpp_insider","metric":"Insider Buy/Sell Ratio","source":"OpenInsider/Finviz","cadence":"weekly","bands":{">=0.6":"green","0.3-0.6":"yellow","<0.3":"red"}},
        {"id":"mpp_fiscal","metric":"Fiscal Impulse (Î” %GDP YoY)","source":"IMF Fiscal Monitor / proxy","cadence":"quarterly","bands":{">=0.5":"green","0-0.5":"yellow","<0":"red"}}
      ],
      "compute": {
        "method": "z-score average",
        "window_months": 24,
        "weights": {"growth":1.5,"labor":1.2,"trade":1.0,"sentiment":0.8},
        "formula": "MPP = mean(z_i)"
      },
      "bands": [
        {"range":"0-1","label":"Calm","color":"green"},
        {"range":"1-2","label":"Watchful","color":"yellow"},
        {"range":"2-3","label":"Caution","color":"orange"},
        {"range":"3-4","label":"Stress","color":"red"},
        {"range":">4","label":"Crisis","color":"crimson"}
      ],
      "integration": {
        "header": true,
        "ttl_adjust": "TTL_adj = TTL_base * (1 - 0.05 * abs(dMPP))",
        "cross_matrix": [
          {"msi_delta":"up","mpp_delta":"down","interpretation":"tightening stress","bias":"maintain convex hedges"},
          {"msi_delta":"down","mpp_delta":"up","interpretation":"recovery","bias":"rotate into real assets gradually"},
          {"msi_delta":"up","mpp_delta":"up","interpretation":"overheat","bias":"trim risk; prefer inflation hedges"},
          {"msi_delta":"down","mpp_delta":"down","interpretation":"policy vacuum","bias":"stay defensive; preserve liquidity"}
        ],
        "ledger_log": "Record MSIâ€“MPP divergences >1Ïƒ as Momentum Stress Events."
      }
    },
    "CLOQDM_v1_0": {
      "id": "CLOQDM_v1_0",
      "name": "CLO Quality Drift Monitor",
      "purpose": "Detect late-cycle leverage deterioration in loans/CLOs before broad credit stress.",
      "domain": ["Credit","Vol/Liq"],
      "tiles": [
        {"id":"clo_ll_default_rate","metric":"Leveraged Loan Default Rate (LTM, %)","source":"LCD/LevFin proxies","cadence":"monthly"},
        {"id":"clo_oc_ic_breaches","metric":"CLO OC/IC Test Breaches (count)","source":"Trustee reports/indices","cadence":"monthly_or_quarterly"},
